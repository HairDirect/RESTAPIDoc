<div class="card" id="action-{{toLower Category.Name}}{{@index}}">
    <h3>{{Name}}</h3>
    <span>Description: {{Description}}</span><br />
    <span>Endpoint: {{Endpoint}}</span><br />
    <span>Verb: {{Verb}}</span>
    <h4>Payload</h4>
    <div class="table-wrapper">
        <table class="table--bordered table--striped table--data">
            <thead>
                <tr><th>Name</th><th>Type</th><th>Notes</th></tr>
            </thead>
            <tbody>
                {{#each Payload}}
                <tr>
                    {{> p-payload}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <h4>Response</h4>
    <div class="table-wrapper">
        <table class="table--bordered table--striped table--data">
            <thead>
                <tr><th>Name</th><th>Type</th><th>Notes</th></tr>
            </thead>
            <tbody>
                {{#each Response}}
                <tr>
                    {{> p-response}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!--<h4>Test it</h4>
    <button class="btn btn--gamma btn--secondary">Clear</button>
    <button class="btn btn--gamma btn--positive btn--primary" data-endpoint="{{Endpoint}}" data-verb="{{Verb}}" data-sample='{{stringifyJSON SampleCall}}'>Execute</button>
    <h5>Result</h5>
    <code></code>-->
    <div class="sample-response">
        <h4>Sample Response</h4>
        <div class="onoff">
            <input type="checkbox" id="switch-{{toLower Category.Name}}{{@index}}">
            <label for="switch-{{toLower Category.Name}}{{@index}}">
                <span class="inner"></span>
                <span class="switch"></span>
            </label>
        </div>
        <pre style="display: none;"><code>{{{stringifyJSON SampleResponse}}}</code></pre>
    </div>
</div>
